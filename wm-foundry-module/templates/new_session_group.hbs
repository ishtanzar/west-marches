<form autocomplete="off">
    <div class="form-group">
        <div class="form-fields">
            <label for="group_name" style="white-space: nowrap">Nouveau Groupe</label>
            <input name="group_name" type="text" placeholder="Nom du groupe"/>
        </div>
    </div>
    <div class="form-group">
        <div class="form-fields">
            <label for="group_id" style="white-space: nowrap">Groupe existant</label>
            <select name="group_id">
                {{#each groups}}
                    <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</form>